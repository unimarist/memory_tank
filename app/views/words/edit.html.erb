  <div class="container">

    <p class="center_font">Wordの編集 : <%= @tank.tank_name %></p>

    <%= flash[:error_word] %> 

     <%= form_with(model: [@tank,@word],local: true ) do |form| %>

      <div class="field">
        <%= form.label :word ,"Word (必須：100文字以内)" %><br><br>
        <%= form.text_field :word %>
      </div>
      <div class="field">
        <%= form.label :meaning ,"意味 (必須：500文字以内)" %><br><br>
        <%= form.text_field :meaning %>
      </div>
      <div class="field">
         <%= form.submit "編集する" ,class: "btn-n btn--orange" %>
         <% if @word.correct_rate >= 70 %>
         <%= link_to "戻る", learned_tank_words_path(@word.tank_id), class: "btn btn--blue" %>
         <% else %>
          <%= link_to "戻る", unlearned_tank_words_path(@word.tank_id), class: "btn btn--blue" %>
          <% end %>
      </div>
    <% end %>
  </div>