<div class="tank_container2">

 
 <div class="word_top">
     <p class="p3">未習得Word : <%= @tank.tank_name %></p>
  </div>

 <div class="word_top_button">
      <%= link_to "戻る", tank_words_path(@tank.id), class:  "btn btn--blue btn--shadow" %>
 </div>

  <% @words.each do |word|   %>

   <div class=list2 >
  
     <div class="tank_name">
         <p class="p6"><%= word.word %></p>
     </div>
      <div class="tank_name" >
         <p class="p9"  ><%= word.meaning %></p>
     </div>

      <div class="word_button">
       　<%= link_to "分かった！", correct_count_tank_word_path(@tank.id,word.id), class: "btn btn--orange btn--shadow" %>
         <%= link_to "分からなかった！", uncorrect_count_tank_word_path(@tank.id,word.id) ,class:  "btn btn--blue btn--shadow" %>
         <%= link_to "編集", edit_tank_word_path(@tank.id,word.id), class: "btn btn--orange btn--shadow" %>
         <%= link_to "削除", tank_word_path(@tank.id,word.id), method: :delete ,class:  "btn btn--blue btn--shadow" %>
      </div>
    </div>

  <% end %>
</div>

<footer>
     <div class="footer_left">
        <div class="footer_left_main">
           <a href="/"><p class="p2">MemoryTank</p></a>
        </div>
        <div class="fotter_left_sub">
           <p class="p2">〜効率的なナレッジ蓄積と知識定着を支援〜</p>
        </div>
     </div>
     <div class="footer_right">
        <div id="page_top"><a href="#"></a></div>
     </div>
</footer>